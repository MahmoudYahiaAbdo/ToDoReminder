<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yahia.todoreminer.search_todoList">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp"
    android:weightSum="1">
<ImageButton
    android:id="@+id/searchFrom"
    android:layout_width="50dp"
    android:layout_height="40dp"
    android:scaleType="fitXY"
    android:src="@drawable/date_icon"/>

<TextView
    android:id="@+id/fromDate"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text=" from (dd / mm / yyyy)"
    android:layout_weight="1"/>

    <ImageButton
        android:id="@+id/searchTo"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/date_icon" />

    <TextView
    android:id="@+id/toDate"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text=" to (dd / mm / yyyy) "
    android:layout_weight="1"/>
</LinearLayout>
<EditText
    android:id="@+id/search_byName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Item Name ..."/>
<Button
    android:id="@+id/search_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Search"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="ToDo Search Results"
    android:shadowColor="@color/colorPrimaryDark" />
<ListView
    android:id="@+id/searchList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF444444"
    android:layout_gravity="fill"/>
</LinearLayout>
</android.support.constraint.ConstraintLayout>
